---
import PROJECTS from "../data/projects"
---

<div class="flex flex-col gap-y-16 lg:w-3/5 w-full m-auto px-8">
  {
    PROJECTS.map(({ title, description, image, link, github, tags }) => (
      <article class="flex flex-col gap-y-8 group md:flex-row md:gap-x-8">
        <div class="w-full md:w-1/2">
          <div class="relative">
            <img
              src={image}
              alt={title}
              class="object-cover object-center rounded-lg w-full h-46"
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 flex flex-col md:justify-start justify-center">
          <div>
            <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
              {title}
            </h3>
            <div class="flex flex-wrap gap-2 my-3">
              {tags.map(({ name, class: tagClass, icon: Icon }) => (
                <span
                  class={`flex items-center px-2 py-1 rounded-full text-white text-sm ${tagClass}`}
                >
                  <Icon class="w-4 h-4 mr-1" />
                  {name}
                </span>
              ))}
            </div>
            <p class="text-gray-600 dark:text-gray-300">{description}</p>
            <div class="flex gap-4 mt-6">
              <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="btn"
              >
                GitHub
              </a>
              {link && (
                <a
                  href={link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn"
                >
                  Preview
                </a>
              )}
            </div>
          </div>
        </div>
      </article>
    ))
  }
</div>
