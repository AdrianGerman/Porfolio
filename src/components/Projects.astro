---
import PROJECTS from "../data/projects"
import Github from "./icons/Github.astro"
import Preview from "./icons/Preview.astro"
import ProjectTitle from "./icons/ProjectTitle.astro"
---

<h2 class="text-4xl font-bold mb-6 flex gap-4 items-center underline">
  <ProjectTitle class="w-10 h-10" />
  Proyectos
</h2>
<div class="flex flex-col gap-y-16 m-auto">
  {
    PROJECTS.map(({ title, description, image, link, github, tags }) => (
      <article class="flex flex-col gap-y-8 group xl:flex-row xl:gap-x-8">
        <div class="w-full xl:w-1/2">
          <div class="relative">
            <img
              src={image}
              alt={title}
              class="object-cover object-center rounded-xl w-full h-46"
            />
          </div>
        </div>

        <div class="w-full xl:w-1/2 flex flex-col xl:justify-start justify-center">
          <div>
            <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
              {title}
            </h3>
            <div class="flex flex-wrap gap-2 my-3">
              {tags.map(({ name, class: tagClass, icon: Icon }) => (
                <span
                  class={`flex items-center px-2 py-1 rounded-full text-white text-sm ${tagClass}`}
                >
                  <Icon class="w-4 h-4 mr-1" />
                  {name}
                </span>
              ))}
            </div>
            <p class="text-gray-600 dark:text-gray-300">{description}</p>
            <div class="flex gap-4 mt-6">
              <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-slate-900 py-2 px-4 rounded-xl border border-slate-600 flex gap-2 items-center justify-center transform transition duration-300 hover:scale-105"
              >
                <Github class="w-6 h-6 fill-white" />
                Code
              </a>
              {link && (
                <a
                  href={link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-slate-900 py-2 px-4 rounded-xl border border-slate-600 flex gap-2 items-center justify-center transform transition duration-300 hover:scale-105"
                >
                  <Preview />
                  Preview
                </a>
              )}
            </div>
          </div>
        </div>
      </article>
    ))
  }
</div>
